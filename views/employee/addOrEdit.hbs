<h3>{{ viewTitle }}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{ employee._id }}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" name="fullName" class="form-control" placeholder="Full Name" value="{{ employee.fullName }}">
        <div class="text-danger">
            {{ employee.fullNameError }}
        </div>
    </div>
    <div class="form-group">
        <label>E-mail</label>
        <input type="email" name="email" class="form-control" placeholder="E-mail" value="{{ employee.email }}">
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label>Phone Number</label>
            <input type="text" name="phoneNumber" class="form-control" placeholder="Phone Number" value="{{ employee.phoneNumber }}">
        </div>
        <div class="form-group col">
            <label>City</label>
            <input type="text" name="city" class="form-control" placeholder="City" value="{{ employee.city }}">
        </div>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fa fa-database"></i> Simpan</button>
    <a href="/employee/list" class="btn btn-secondary"><i class="fa fa-list-alt"></i> View All</a>
</form>